<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    <section name="forwarderService" type="FS.SMIS_Cloud.Alarm.Forwarder.Config.ForwarderServiceConfig, WarningManagementProcess" allowLocation="true" allowDefinition="Everywhere" />
  </configSections>
  <log4net>
    <!--定义输出到文件中，且以rolling方式记录-->
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value=".\log\WarningManagement.log" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="5MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="warn" />
        <param name="LevelMax" value="Error" />
      </filter>
    </appender>
    <!--定义输出到控制台命令行中,错误显示时为红色文字，为调试信息时，显示为绿色文字-->
    <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="debug" />
        <param name="LevelMax" value="Error" />
      </filter>
    </appender>
    <!--定义日志的输出媒介，下面定义日志以不同方式输出。也可以按照下面的一种类型或多种类型输出。-->
    <root>
      <!--级别设置-->
      <level value="DEBUG" />
      <!--RollingFileAppender日志-->
      <appender-ref ref="RollingFileAppender" />
      <!--控制台控制显示日志-->
      <appender-ref ref="ColoredConsoleAppender" />
    </root>
  </log4net>
  <appSettings>
    <!--远程数据库连接-->
    <add key="ConnectionString" value="server=192.168.1.128;database=DW_iSecureCloud_Empty;User ID=sa;Password=861004" />
    <!--本地数据库连接-->
    <!--<add key="ConnectionString" value="server=(local);integrated security=True;database=DW_iSecureCloud_Empty" />-->
    <!--数据库连接是否加密-->
    <add key="ConStringEncrypt" value="False" />
    <add key="myName" value="WarningManagementProcess" />
    <!--邮件发件人和密码配置-->
    <add key="senderAddress" value="peng.ling@free-sun.com.cn" />
    <add key="senderName" value="彭玲" />
    <add key="senderPassword" value="******" />
    <!--告警发送时间间隔单位ms-->
    <add key="warningSendInterval" value="3000" />
    <add key="ToClient" value="true" />
    <add key="SMSProfile" value="PRODUCT" />
    <add key="ClientSettingsProvider.ServiceUri" value="" />
  </appSettings>
  <forwarderService>
    <serialSMSList>
      <serialSMS com="1" baudrate="9600" top="10" interval="10000" maxCapacity="200" dispatchInterval="300" commitCount="100" sendInterval="1000" organizationids=" ,1,2,15">
      </serialSMS>
    </serialSMSList>
    <serialSoundAndLightList>
      <serialSoundAndLight name="COM3" baudrate="9600" interval="10000" organizationids="1,2,15">
        <!--不同级别告警的声光设置：绿光闪烁|黄光闪烁|红灯闪烁|声音2|声音1-->
        <warning mode="10000">
        </warning>
        <minor mode="10000">
        </minor>
        <major mode="01000">
        </major>
        <critical mode="00100">
        </critical>
      </serialSoundAndLight>
    </serialSoundAndLightList>
    <tcpSoundAndLightList>
      <!--不同组织id以逗号分隔，如2,3,4-->
      <tcpSoundAndLight type="Server" ip="0.0.0.0" port="8080" mode="0" interval="10000" listtimeout="200" organizationids="1,2,15">
        <!--不同级别告警的声光设置：绿光闪烁|黄光闪烁|红灯闪烁|声音2|声音1-->
        <warning mode="10000">
        </warning>
        <minor mode="10000">
        </minor>
        <major mode="01000">
        </major>
        <critical mode="00100">
        </critical>
      </tcpSoundAndLight>
    </tcpSoundAndLightList>
  </forwarderService>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0" />
  </startup>
  <system.web>
    <membership defaultProvider="ClientAuthenticationMembershipProvider">
      <providers>
        <add name="ClientAuthenticationMembershipProvider" type="System.Web.ClientServices.Providers.ClientFormsAuthenticationMembershipProvider, System.Web.Extensions, Version=4.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" serviceUri="" />
      </providers>
    </membership>
    <roleManager defaultProvider="ClientRoleProvider" enabled="true">
      <providers>
        <add name="ClientRoleProvider" type="System.Web.ClientServices.Providers.ClientRoleProvider, System.Web.Extensions, Version=4.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" serviceUri="" cacheTimeout="86400" />
      </providers>
    </roleManager>
  </system.web>
</configuration>