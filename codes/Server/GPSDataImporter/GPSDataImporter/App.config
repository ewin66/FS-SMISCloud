<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <appSettings>
    <clear />
    <!--采集间隔（毫秒）-->
    <add key="Interval" value="60000" />    
  </appSettings>
  <connectionStrings>
    <clear />    
    <add name="DestinationDB" connectionString="server=192.168.0.10;database=DW_iSecureCloud_Empty;uid=sa;pwd=Fas123" providerName="System.Data.SqlClient" />
  </connectionStrings>
  <log4net>
    <!--输出到文件-->
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <!--文件名-->
      <file value=".\\Log\\" />
      <!--追加方式写-->
      <appendToFile value="true" />
      <rollingStyle value="Composite" />
      <datePattern value="yyyy_MM_dd/'log.txt'" />
      <!--每次写10个文件后覆盖-->
      <maxSizeRollBackups value="10" />
      <!--每个文件最大10MB-->
      <maximumFileSize value="10MB" />
      <staticLogFileName value="false" />
      <!--格式-->
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date - %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="DEBUG" />
      <appender-ref ref="RollingFileAppender" />
    </root>
  </log4net>
</configuration>